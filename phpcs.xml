<?xml version="1.0"?>
<ruleset name="SierraTecnologia CMS">
    <description>The coding standard for SierraTecnologia CMS.</description>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/Migrations/*</exclude-pattern>
    <exclude-pattern>*/Assets/*</exclude-pattern>
    <exclude-pattern>*/PublishedAssets/*</exclude-pattern>
    <exclude-pattern>*/Views/*</exclude-pattern>
    <exclude-pattern>*/Templates/*</exclude-pattern>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow long lines in some cases -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff names -->
    <arg value="s"/>

    <!-- Set memory limit -->
    <ini name="memory_limit" value="256M"/>
</ruleset>
